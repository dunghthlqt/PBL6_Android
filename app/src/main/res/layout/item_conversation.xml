<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp">

    <!-- Shop Avatar -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_shop_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_light"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_account" />

    </androidx.cardview.widget.CardView>

    <!-- Online Indicator -->
    <View
        android:id="@+id/online_indicator"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="-2dp"
        android:background="@drawable/bg_online_indicator"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/card_avatar"
        app:layout_constraintEnd_toEndOf="@id/card_avatar"
        tools:visibility="visible" />

    <!-- Shop Name -->
    <TextView
        android:id="@+id/tv_shop_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/text_primary_light"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/tv_time"
        app:layout_constraintStart_toEndOf="@id/card_avatar"
        app:layout_constraintTop_toTopOf="@id/card_avatar"
        tools:text="Cửa hàng điện thoại ABC" />

    <!-- Last Message Time -->
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_shop_name"
        tools:text="14:30" />

    <!-- Unread Badge -->
    <androidx.cardview.widget.CardView
        android:id="@+id/badge_unread"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/delete_background"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_time"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_unread_count"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="2" />

    </androidx.cardview.widget.CardView>

    <!-- Last Message Preview -->
    <TextView
        android:id="@+id/tv_last_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/badge_unread"
        app:layout_constraintStart_toEndOf="@id/card_avatar"
        app:layout_constraintTop_toBottomOf="@id/tv_shop_name"
        tools:text="Cảm ơn bạn đã mua hàng! Đơn hàng sẽ được giao trong 2-3 ngày." />

    <!-- Divider -->
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/stroke_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_last_message" />

</androidx.constraintlayout.widget.ConstraintLayout>

