<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <!-- Icon Background -->
    <View
        android:id="@+id/menu_icon_background"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_menu_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Icon -->
    <ImageView
        android:id="@+id/menu_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_notification"
        app:layout_constraintBottom_toBottomOf="@+id/menu_icon_background"
        app:layout_constraintEnd_toEndOf="@+id/menu_icon_background"
        app:layout_constraintStart_toStartOf="@+id/menu_icon_background"
        app:layout_constraintTop_toTopOf="@+id/menu_icon_background"
        app:tint="#64748B" />

    <!-- Title -->
    <TextView
        android:id="@+id/menu_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:text="Thông báo"
        android:textColor="#1E293B"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/menu_subtitle"
        app:layout_constraintEnd_toStartOf="@+id/menu_switch"
        app:layout_constraintStart_toEndOf="@+id/menu_icon_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/menu_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Nhận thông báo khuyến mãi"
        android:textColor="#64748B"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/menu_title"
        app:layout_constraintStart_toStartOf="@+id/menu_title"
        app:layout_constraintTop_toBottomOf="@+id/menu_title" />

    <!-- Switch -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/menu_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:thumbTint="@android:color/white"
        app:trackTint="@color/switch_track_color" />

</androidx.constraintlayout.widget.ConstraintLayout>
