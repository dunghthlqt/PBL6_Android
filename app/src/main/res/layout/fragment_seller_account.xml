<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="89dp">

            <!-- Profile Header -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingTop="48dp"
                android:paddingBottom="24dp">

                <FrameLayout
                    android:id="@+id/avatar_container"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <View
                        android:id="@+id/avatar_background"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_avatar" />

                    <ImageView
                        android:id="@+id/avatar_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_account"
                        app:tint="@android:color/white" />
                </FrameLayout>

                <TextView
                    android:id="@+id/shop_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="Tên cửa hàng"
                    android:textColor="#1E293B"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/avatar_container"
                    app:layout_constraintTop_toTopOf="@+id/avatar_container" />

                <TextView
                    android:id="@+id/shop_stats"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="0 sản phẩm • 0 đơn hàng"
                    android:textColor="#64748B"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/shop_name"
                    app:layout_constraintStart_toStartOf="@+id/shop_name"
                    app:layout_constraintTop_toBottomOf="@+id/shop_name" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Switch to Buyer Mode Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_switch_to_buyer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="Chuyển sang chế độ Mua hàng"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_shopping"
                app:iconGravity="start" />

            <!-- Shop Management Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="QUẢN LÝ CỬA HÀNG"
                android:textColor="#64748B"
                android:textSize="14sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_line"
                    android:orientation="vertical"
                    android:showDividers="middle">

                    <include layout="@layout/item_account_menu"
                        android:id="@+id/menu_shop_info" />

                    <include layout="@layout/item_account_menu"
                        android:id="@+id/menu_shop_settings" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Settings Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="CÀI ĐẶT"
                android:textColor="#64748B"
                android:textSize="14sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_line"
                    android:orientation="vertical"
                    android:showDividers="middle">

                    <include layout="@layout/item_account_menu"
                        android:id="@+id/menu_help" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

