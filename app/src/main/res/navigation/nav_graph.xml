<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/landingPageFragment">

    <fragment
        android:id="@+id/landingPageFragment"
        android:name="com.demo.pbl6_android.ui.landing.LandingPageFragment"
        android:label="Landing Page">
        <action
            android:id="@+id/action_landingPageFragment_to_accountFragment"
            app:destination="@id/accountFragment" />
        <action
            android:id="@+id/action_landingPageFragment_to_productDetailFragment"
            app:destination="@id/productDetailFragment" />
    </fragment>
    
    <fragment
        android:id="@+id/productDetailFragment"
        android:name="com.demo.pbl6_android.ui.product.ProductDetailFragment"
        android:label="Product Detail">
        <argument
            android:name="productId"
            app:argType="string" />
        <action
            android:id="@+id/action_productDetailFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
        <action
            android:id="@+id/action_productDetailFragment_to_orderFragment"
            app:destination="@id/orderFragment" />
    </fragment>

    <fragment
        android:id="@+id/accountFragment"
        android:name="com.demo.pbl6_android.ui.account.AccountFragment"
        android:label="Account">
        <action
            android:id="@+id/action_accountFragment_to_landingPageFragment"
            app:destination="@id/landingPageFragment" />
        <action
            android:id="@+id/action_accountFragment_to_orderHistoryFragment"
            app:destination="@id/orderHistoryFragment" />
    </fragment>
    
    <fragment
        android:id="@+id/orderHistoryFragment"
        android:name="com.demo.pbl6_android.ui.order.OrderHistoryFragment"
        android:label="Order History" />

    <fragment
        android:id="@+id/cartFragment"
        android:name="com.demo.pbl6_android.ui.cart.CartFragment"
        android:label="Cart">
        <action
            android:id="@+id/action_cartFragment_to_orderFragment"
            app:destination="@id/orderFragment" />
    </fragment>

    <fragment
        android:id="@+id/orderFragment"
        android:name="com.demo.pbl6_android.ui.order.OrderFragment"
        android:label="Order">
        <action
            android:id="@+id/action_orderFragment_to_shopVoucherFragment"
            app:destination="@id/shopVoucherFragment" />
        <action
            android:id="@+id/action_orderFragment_to_platformVoucherFragment"
            app:destination="@id/platformVoucherFragment" />
        <action
            android:id="@+id/action_orderFragment_to_shippingMethodFragment"
            app:destination="@id/shippingMethodFragment" />
    </fragment>

    <fragment
        android:id="@+id/shopVoucherFragment"
        android:name="com.demo.pbl6_android.ui.voucher.ShopVoucherFragment"
        android:label="Shop Voucher" />

    <fragment
        android:id="@+id/platformVoucherFragment"
        android:name="com.demo.pbl6_android.ui.voucher.PlatformVoucherFragment"
        android:label="Platform Voucher" />

    <fragment
        android:id="@+id/shippingMethodFragment"
        android:name="com.demo.pbl6_android.ui.shipping.ShippingMethodFragment"
        android:label="Shipping Method" />

</navigation>
